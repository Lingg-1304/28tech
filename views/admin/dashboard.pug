doctype html
html
    head
        title Admin Dashboard
    body
        .dashboard
            h1 Admin Dashboard
            .stats
                h2 Statistics
                ul
                    li Total Products: 
                    li Total Users: 
                    li Total Orders:
            .actions
                h2 Actions
                ul
                    li: a(href='/admin/products') Manage Products
                    li: a(href='/admin/users') Manage Users
                    li: a(href='/admin/orders') Manage Orders

            .products
                h2 Product List
                table
                    thead
                        tr
                            th Name
                            th Price
                            th Description
                            th Actions
                    tbody
                        each product in products
                            tr
                                td #{product.title}
                                td #{product.price} $
                                td #{product.description}
                                td
                                    a(href=`/admin/products/edit/${product.id}`) Edit
                                    |  
                                    a(href=`/admin/products/delete/${product.id}`) Delete